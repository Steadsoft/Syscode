{
    "files.exclude": {
  "**/bin": true,
  "**/obj": true,
  "**/*.log": true,
  "**/*.class":true
    },

      "colorMyText.configurations": [
        {
            "paths": [
                "*.sys"
            ],
            "rules": [

                {
                    "patterns": [
                        "\\/\\*.*?\\*\/", "\/\/[^\r\n]*"
                    ],
                    "color":"Magenta"
                },

                {
                    "patterns": [
                        "if", "then","elif","else"
                    ],
                    "color":"BrightRed"
                },
                {
                    "patterns": [
                        "struct", "dcl","proc", "procedure", "func","function","scope"
                    ],
                    "color":"BrightCyan"
                },
                {
                    "patterns": [
                        "while","until"
                    ],
                    "color":"BrightGreen"
                },
                {
                    "patterns": [
                        "for", "to","by"
                    ],
                    "color":"Blue"
                },
                {
                    "patterns": [
                        "end"
                    ],
                    "color":"BrightWhite"
                },
                {
                    "patterns": [
                        "return"
                    ],
                    "color":"BrightGreen"
                },
                {
                    "patterns": [
                        "@[a-zA-Z_]+"
                    ],
                    "color":"Green"
                },
                {
                    "patterns": [
                        "=",
                        "*",
                        "+", 
                        "<\\|", 
                        "<&", 
                        "<\\^",
                        "\\(",
                        "\\)",
                        ">=",
                        "<=",
                        ">",
                        "<",
                        "/",
                        "-",
                        "+=",
                        "-=",
                        "*=",
                        "/=",
                        "&=",
                        "|=",
                        "^="

                    ],
                    "color":"BrightCyan"
                },

                {
                    "patterns": [
                        "\\w.* - in progress.*",
                        "\\w.* - pending.*"
                    ],
                    "bold": true
                },
                {
                    "patterns": [
                        "\\w.* - done.*"
                    ],
                    "strikeThrough": true
                }
            ]
        },
