{
    "files.exclude": {
  "**/bin": true,
  "**/obj": true,
  "**/*.log": true,
  "**/*.class":true
    },

      "colorMyText.configurations": [
        {
            "paths": [
                "*.sys"
            ],
            "rules": [

                {
                    "patterns": [
                        "\\/\\*.*?\\*\/", "\/\/[^\r\n]*"
                    ],
                    "color":"Yellow",
                    "italic": true
                },

                {
                    "patterns": [
                        "if", "then", "elif", "else"
                    ],
                    "color":"BrightMagenta",
                    "bold": true,
                    "italic": false

                },
                                {
                    "patterns": [
                        "type", "struct", "dcl"
                    ],
                    "color":"BrightGreen",
                    "bold": true,
                    "italic": false

                },

                {
                    "patterns": [
                        "do","call","type", "struct", "dcl","proc", "procedure", "func","function","scope","aligned","unaligned","end","goto","return"
                    ],
                    "color":"BrightCyan",
                    "bold": true,
                    "italic": false

                },
                {
                    "patterns": [
                        "while","until", "for", "to","by","loop"
                    ],
                    "color":"BrightRed",
                    "bold": true,
                    "italic": false

                },
                {
                    "patterns": [
                        "end"
                    ],
                    "color":"BrightWhite",
                    "bold": true,
                    "italic": false

                },
                {
                    "patterns": [
                        "@[a-zA-Z_]+"
                    ],
                    "color":"Green"
                },
                                {
                    "patterns": [
                        "[a-zA-Z_]+"
                    ],
                    "color":"BrightWhite",
                    "italic": true
                },

                {
                    "patterns": [
                        "=",
                        "*",
                        "+", 
                        "<\\|", 
                        "<&", 
                        "<\\^",
                        "\\(",
                        "\\)",
                        ">=",
                        "<=",
                        ">",
                        "<",
                        "/",
                        "-",
                        "+=",
                        "-=",
                        "*=",
                        "/=",
                        "&=",
                        "\\|=",
                        "\\^=",
                        "<<=",
                        ">>=",
                        "<@=",
                        "@>="

                    ],
                    "color":"BrightCyan"
                },

                {
                    "patterns": [
                        "\\w.* - in progress.*",
                        "\\w.* - pending.*"
                    ],
                    "bold": true
                },
                {
                    "patterns": [
                        "\\w.* - done.*"
                    ],
                    "strikeThrough": true
                }
            ]
        },
